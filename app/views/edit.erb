<form action="/articles/<%= @article.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="PATCH">
<input type="text" id="title" name="title" placeholder="<%= @article.title %>" value="<%= @article.title %>">
<input type="text" id="content" name="content" placeholder="<%= @article.content %>" value="<%= @article.content %>">
<input type="submit" value="Edit!" id="submit">
</form>